<h3><%= t('login.log_in') %></h3>
<div class = "loginDiv">
    <%= form_with url: session_create_url, method: :post, local: true do |f| %>

    <% if false#user.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(user.errors.count, t('error.save_user')) %> </h2>

        <ul>
            <% user.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

        <div class = "mb-3">
        <div class="mb-3">
            <%= f.label t('login.username') %>
            <%= f.text_field :login, required: true, class: "form-control", id: "email"%>

            </div>
        <div class="mb-3">
            <%= f.label t('login.password') %>
            <%= f.password_field :password, required: true, class: "form-control", id: "password" %>
        </div>
        
        <div class = "twoBut">
            <%= f.submit t('main.login'), class: "btn btn-dark" %>

        </div>
        </div>
    <% end %>
    <%= form_with url: users_new_url, method: :get, local: true do |f| %>
        <%= f.submit t('signup.create'), class: "btn btn-outline-dark" %>
    <% end %>

</div>